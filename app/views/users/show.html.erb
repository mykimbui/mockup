
<div class="content">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="row">
        <div class="col-xs-2">
          <%= link_to user_path(current_user) do %>
          <% if current_user.facebook_picture_url.nil? %>
          <% unless current_user.profile_picture.nil?  %>
          <% if current_user.profile_picture.present? %>
          <%= cl_image_tag current_user.profile_picture, class: "avatar-nav", crop: :fill %>
          <% else %>
          <%= cl_image_tag("default_fkhyps.png", class: "avatar-nav") %>
          <% end %>
          <% end %>
          <%else %>
          <%= image_tag current_user.facebook_picture_url, class: "avatar-nav", crop: :fill %>
          <% end %>
          <% end %>
        </div>
        <div class="col-xs-10">
          <ul class="list-inline profile liltop">
            <li><%= current_user.first_name.capitalize %></li>
            <li class="profile-inline"><%= current_user.last_name.capitalize %></li>
            <li class="little-dates"><%= current_user.user_score %></li>
          </ul>
          <%= link_to "Edit my profile", edit_user_path(current_user), method: :get, class: "profile opacity" %>
        </div>
      </div>
      <div class="row">
        <% if current_user.members.empty? %>
        <% current_user.members.each do |member| %>
        <%= render "card", member: member %>
        <%end %>
        <% else %>
        You didn't create any trip yet !
        <% end %>
      </div>
      <div id="bottom" class="bottommenup text-center">
        <%= link_to "Start a new trip", new_team_path, class: 'btn-red' %>
      </div>
    </div>
  </div>
</div>


